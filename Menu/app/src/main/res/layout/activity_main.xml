<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    android:weightSum="7">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_anc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Анкета"
            android:backgroundTint="@android:color/white"
            android:textColor="#000000"/>



        <Button
            android:id="@+id/btn_his"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="История запросов"
            android:backgroundTint="@android:color/white"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_sup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Поддержка"
            android:backgroundTint="@android:color/white"
            android:textColor="#000000" />


        <Button
            android:id="@+id/btn_ach"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="Достижения"
            android:textColor="#000000" />


        <Button
            android:id="@+id/btn_fbend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Отзывы"
            android:backgroundTint="@android:color/white"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_other"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="Другое"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="О программе"
            android:backgroundTint="@android:color/white"
            android:textColor="#000000" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>