<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Support">

    <Button
        android:id="@+id/btn_supend"
        android:layout_width="62dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:icon="@drawable/abc_vector_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnchat" />

    <Button
        android:id="@+id/btnchat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="586dp"
        android:text="Открыть чат с разработчиками"
        app:layout_constraintBottom_toTopOf="@+id/btn_supend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@android:color/white"
        android:textColor="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>